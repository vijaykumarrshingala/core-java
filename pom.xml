<!-- Spring Boot WebFlux is needed for RestClient and WebClient -->
<dependency>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-webflux</artifactId>
</dependency>

<!-- Reactor Netty HTTP client for non-blocking networking -->
<dependency>
    <groupId>io.projectreactor.netty</groupId>
    <artifactId>reactor-netty-http</artifactId>
    <version>1.1.17</version> <!-- Matches Spring Boot 3.4.x train -->
</dependency>

<!-- Netty handler for SslContextBuilder (used for custom SSLContext) -->
<dependency>
    <groupId>io.netty</groupId>
    <artifactId>netty-handler</artifactId>
    <version>4.1.107.Final</version> <!-- Optional, pulled transitively -->
</dependency>
